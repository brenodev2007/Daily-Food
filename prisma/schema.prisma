generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id       String     @id @default(cuid())
  nome     String
  email    String     @unique
  senha    String
  dietas   Dieta[]
  refeicoes Refeicao[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Dieta {
  id              String   @id @default(cuid())
  nome            String
  descricao       String
  caloriasDiarias Float
  usuarioId       String
  usuario         User     @relation(fields: [usuarioId], references: [id])
  foods           Food[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("dieta")
}

model Food {
  id        String   @id @default(uuid())
  nome      String
  descricao String
  calorias  Float
  dietaId   String?
  dieta     Dieta?   @relation(fields: [dietaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("food")
}

model Refeicao {
  id            String   @id @default(cuid())
  nome          String
  descricao     String
  dataHora      DateTime
  dentroDaDieta Boolean
  usuarioId     String
  usuario       User     @relation(fields: [usuarioId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("refeicao")
}