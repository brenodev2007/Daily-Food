{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "module": "node16",
    "target": "es2022",
    "skipLibCheck": true
  },
  "include": ["src"]
}
